<div class="container" style="display: grid;grid-template-columns: repeat(11, 1fr);
grid-template-rows: repeat(2, 100px); grid-gap: 10px;">
  <div style=" grid-column: 1 / 2;
  grid-row: 1 / 2;">

<h3>User</h3>
<div style="height:1200px;width:400px;border:1px solid #ccc;overflow:auto;">
  <br/>

<div class="container-fluid">
  <div class=row>
    <div class="col col-md-12">
      <a href="user/create" class="btn btn-primary new">Add User</a>
      <!-- <h3 href="user/create" class="btn btn-primary new">
        Add User
      </h3> -->
      <h2>Recent user entries</h2>
      <p>There are
        <%= users.query.length %> users.
          <br/>
      </p>
      <% for (var i = users.query.length-1; i >= 0; i--) {   
        user = users.query[i];   %>
        <div class="panel panel-default">
          <div class="panel-heading"></div>
          <div class="text-muted pull-right"></div>
          <div class="panel-body">
            <br/> ID:
            <%=  user._id %>
              
                <br/>name:
                <%=user.name%>
                  <br/> email:
                  <%=user.email%>
                  <br/> phone:
                  <%=user.phone%>
                    <br/>
                       
                        <br/>
                        <br/>
                        <a href="/user/delete/<%= user._id  %>" class="btn btn-danger"> Delete </a>
                        <a href="/user/details/<%= user._id %>" class="btn btn-info"> Details </a>
                        <a href="/user/edit/<%= user._id %>" class="btn btn-warning"> Edit </a>
        </div>
      </div>
        <% } %>

    </div>
  </div>
</div>
  </div>

  </div>
  <div style=" grid-column: 2 / 3;
  grid-row: 1 / 2;">
    
    <h3>Player</h3>
    <div style="height:1200px;width:400px;border:1px solid #ccc;overflow:auto;">
      <br/>
    
    <div class="container-fluid">
      <div class=row>
        <div class="col col-md-12">
          <a href="player/create" class="btn btn-primary new">Add Player</a>
          <!-- <h3 href="player/create" class="btn btn-primary new">
            Add player
          </h3> -->
          <h2>Recent player entries</h2>
          <p>There are
            <%= players.query.length %> players.
              <br/>
          </p>
          <% for (var i = players.query.length-1; i >= 0; i--) {   
            player = players.query[i];   %>
            <div class="panel panel-default">
              <div class="panel-heading"></div>
              <div class="text-muted pull-right"></div>
              <div class="panel-body">
                <br/> ID:
                <%=  player._id %>
                  
                    <br/>name:
                    <%=player.name%>
                      <br/> email:
                      <%=player.email%>
                      <br/> phone:
                      <%=player.phone%>
                        <br/>
                           
                            <br/>
                            <br/>
                            <a href="/player/delete/<%= player._id  %>" class="btn btn-danger"> Delete </a>
                            <a href="/player/details/<%= player._id %>" class="btn btn-info"> Details </a>
                            <a href="/player/edit/<%= player._id %>" class="btn btn-warning"> Edit </a>
            </div>
          </div>
            <% } %>
    
        </div>
      </div>
    </div>
      </div>
    
  </div>
  <div style=" grid-column: 3 / 4;
  grid-row: 1 / 2;">
    
    <h3>Event</h3>
    <div style="height:1200px;width:400px;border:1px solid #ccc;overflow:auto;">
      <br/>
    
    <div class="container-fluid">
      <div class=row>
        <div class="col col-md-12">
          <a href="event/create" class="btn btn-primary new">Add Event</a>
          <h2>Recent event entries</h2>
          <p>There are
            <%= events.query.length %> events.
              <br/>
          </p>
          <% for (var i = events.query.length-1; i >= 0; i--) {   
            event = events.query[i];   %>
            <div class="panel panel-default">
              <div class="panel-heading"></div>
              <div class="text-muted pull-right"></div>
              <div class="panel-body">
                <br/> ID:
                <%=  event._id %>
                  
                    <br/>name:
                    <%=event.name%>
                      <br/> email:
                      <%=event.email%>
                      <br/> phone:
                      <%=event.phone%>
                      <br/> state:
                      <%=event.state%>
                      <br/> stadium:
                      <%=event.stadium%>
                      <br/> date 
                      <%=event.date%>
                        <br/>
                           
                            <br/>
                            <br/>
                            <a href="/event/delete/<%= event._id  %>" class="btn btn-danger"> Delete </a>
                            <a href="/event/details/<%= event._id %>" class="btn btn-info"> Details </a>
                            <a href="/event/edit/<%= event._id %>" class="btn btn-warning"> Edit </a>
            </div>
          </div>
            <% } %>
    
        </div>
      </div>
    </div>
      </div>
    
  </div>
</div>